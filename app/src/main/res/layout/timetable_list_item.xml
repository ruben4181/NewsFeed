<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Asignatura"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/subject_name_tv"
                    android:layout_alignParentStart="true" android:layout_alignParentTop="true"/>
            <TextView
                    android:text="Profesor/es"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp" android:id="@+id/subject_teachers_tv"
                    android:layout_below="@+id/subject_name_tv" android:layout_marginTop="5dp"/>
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:layout_below="@+id/subject_teachers_tv"
                    android:layout_marginTop="8dp" android:id="@+id/subject_horarios_lv"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>